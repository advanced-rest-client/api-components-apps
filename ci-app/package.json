{
  "name": "api-components-ci",
  "version": "0.1.31",
  "description": "A CI server to run API components tests using latest version of AMF and report results",
  "main": "app.js",
  "scripts": {
    "start": "node ${SCRIPT:-api.js}",
    "start:api": "node --inspect=9227 api.js --PORT=8080",
    "start:worker": "node --inspect=9225 worker.js --PORT=8083",
    "start:github": "node --inspect=9224 github.js --PORT=8084",
    "test": "mocha test/*.spec.js --require esm --timeout 90000",
    "test:watch": "mocha test/*.spec.js --require esm --timeout 90000 --watch",
    "gke:build": "docker build -t gcr.io/advancedrestclient-1155/apic-ci-api:$npm_package_version .",
    "gke:deploy": "gcloud docker -- push gcr.io/advancedrestclient-1155/apic-ci-api:$npm_package_version",
    "gke:deploy-config": "npm run deploy-tests && npm run deploy-github && npm run deploy-api",
    "gke:deploy-tests": "kubectl apply -f tests-deployment.yaml",
    "gke:deploy-github": "kubectl apply -f github-deployment.yaml",
    "gke:deploy-api": "kubectl apply -f api-deployment.yaml",
    "gke:update-image": "kubectl set image deployment/apic-ci-frontend apic-ci=gcr.io/advancedrestclient-1155/apic-ci-api"
  },
  "dependencies": {
    "@google-cloud/datastore": "^4.5.0",
    "@google-cloud/debug-agent": "^4.0.4",
    "@google-cloud/logging-winston": "^3.0.0",
    "@google-cloud/pubsub": "^1.1.5",
    "@google-cloud/storage": "^4.1.1",
    "@google-cloud/trace-agent": "^4.2.2",
    "@open-wc/testing": "^2.3.9",
    "@open-wc/testing-karma": "^3.1.54",
    "body-parser": "^1.19.0",
    "connect-memcached": "^1.0.0",
    "conventional-changelog": "^3.1.12",
    "cors": "^2.8.5",
    "decamelize": "^3.2.0",
    "deepmerge": "^4.2.2",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "express-winston": "^4.0.1",
    "fs-extra": "^8.1.0",
    "github-api": "^3.3.0",
    "jsonwebtoken": "^8.5.1",
    "karma": "^4.4.1",
    "lit-element": "^2.2.1",
    "moment": "^2.24.0",
    "nconf": "^0.10.0",
    "nodegit": "^0.26.2",
    "openpgp": "^4.6.2",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^2.0.0",
    "polymer-analyzer": "^3.2.4",
    "semver": "^6.3.0",
    "slug": "^1.1.0",
    "tar-fs": "^2.0.0",
    "tmp": "0.1.0",
    "uuid": "^3.3.3",
    "validator": "^12.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint-config-google": "^0.14.0",
    "express-http-proxy": "^1.6.0",
    "sinon": "^7.5.0"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/api-components-apps.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-rest-client/api-components-apps/issues",
    "email": "arc@mulesoft.com"
  },
  "authors": [
    "Pawel Psztyc",
    "The Advanced REST client authors <arc@mulesoft.com>"
  ],
  "eslintConfig": {
    "extends": [
      "eslint-config-google"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 8
    },
    "env": {
      "browser": true,
      "mocha": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "no-undef": "error",
      "require-jsdoc": 0,
      "comma-dangle": 0,
      "new-cap": [
        "error",
        {
          "properties": false,
          "capIsNew": false
        }
      ],
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "no-console": [
        "error"
      ]
    }
  }
}
