  "description": "A CI server, API server and documentation apps repository",
  "main": "",
  "scripts": {
    "create-index": "gcloud datastore indexes create index.yaml",
    "test": "npm run test-ci-app",
    "test-ci-app": "cd ci-app && npm test && cd ..",
    "lint:eslint": "eslint --ext .js,.html .",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "lint:prettier": "prettier \"**/*.js\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format:prettier": "prettier \"**/*.js\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/api-components-apps.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-rest-client/api-components-apps/issues",
    "email": "arc@mulesoft.com"
  },
  "authors": [
    "Pawel Psztyc",
    "The Advanced REST client authors <arc@mulesoft.com>"
  ],
  "engines": {
    "node": ">=13"
  },
  "dependencies": {
    "@types/express": "^4.17.6",
    "@types/node": ">=13"
  },
  "devDependencies": {
    "@advanced-rest-client/prettier-config": "^0.1.0",
    "@api-components/api-console-builder": "^2.1.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/openpgp": "^4.4.14",
    "@types/semver": "^7.3.4",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint-config-esnext": "^4.1.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "esm": "^3.2.25",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "lerna": "^3.22.0",
    "lint-staged": "^10.4.2",
    "mocha": "^7.2.0",
    "prettier": "^2.1.2",
